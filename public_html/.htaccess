<FilesMatch \.(?:php|js)$>
    SetHandler application/x-httpd-php
</FilesMatch>

<If "%{HTTP_HOST} =~ /^(?:api\.|res\.)?(?:localhost|127.0.0.1):8080$/">
    SetEnv LD_USE_DYNAMIC_ROOT_LINK 1
</If>
<If "%{HTTP_HOST} =~ /^(?:api\.|res\.)?siteinteressant\.net$/">
    AddHandler application/x-httpd-lsphp .js .php    
</If>
<Else>
    php_flag display_startup_errors on
    php_flag display_errors on
    php_flag log_errors on
</Else>

Header merge Cache-Control no-cache

RewriteEngine on

RewriteCond %{REQUEST_URI} ^/$ [NC]
RewriteRule .* index

RewriteRule ^((.*\/|)[^.]+)$ $1.php [NC,DPI]

RewriteCond %{HTTP_HOST} !(?:^(api\.|res\.)) [NC]
RewriteCond %{REQUEST_URI} !^/subdomains/www
RewriteRule (.*) /subdomains/www/$1 [PT]

RewriteCond %{REQUEST_URI} ^/subdomains/www/(home)(?:/.*)?\.php$ [NC]
RewriteRule ^subdomains/www/([^/]*)(/.*)?\.php$ /subdomains/www/index.php?loadPage=/pages/$1.php&urlEnd=$2&%{QUERY_STRING} [L]